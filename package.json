{
  "name": "bootstrap-starter",
  "version": "1.1.0",
  "description": "",
  "main": "index.js",
  "dependencies": {
    "bootstrap": "^3.3.7",
    "bower": "^1.8.0",
    "browser-sync": "^2.18.12",
    "jquery": "^3.2.1"
  },
  "devDependencies": {
    "concurrently": "^3.4.0",
    "localtunnel": "^1.8.3",
    "onchange": "^3.2.1",
    "postcss": "^6.0.6",
    "postcss-cli": "^4.1.0",
    "postcss-font-magician": "^2.0.0"
  },
  "scripts": {
    "serve": "concurrently \"npm run bs\" \"npm run lt\" \"npm run build:styles\"",
    "bs": "browser-sync start --files \"**/*.css, **/*.html, **/*.js\" --host $IP --port $PORT --server",
    "lt": "lt --port 3000 --local-host 0.0.0.0 --subdomain bootstrapstarter",
    "build:styles": "onchange \"public/css/style.css\" -- npm run fontMagician",
    "fontMagician": "postcss public/css/style.css -u postcss-font-magician -o public/css/style.min.css"
  },
  "keywords": [],
  "author": "",
  "license": "ISC"
}
